{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./app/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
